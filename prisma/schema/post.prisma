model Post {
  id         String     @id @default(uuid())
  title      String     @db.VarChar(225)
  content    String     @db.Text
  thumbnail  String?
  isFeatured Boolean
  status     PostStatus @default(PUBLISHED)
  tags       String[]
  views      Int        @default(0)
  authorId   String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  comments Comment[]

  //indexing and mapping
  @@index([authorId])
  @@map("posts")
}
enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}